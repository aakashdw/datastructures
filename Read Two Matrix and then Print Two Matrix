#include<stdio.h>
main()
{
	int a[2][2],b[2][2],s[2][2],i,j;
	clrscr();
	printf(" Element of the first matrix : \n");
	for(i=0;i<=1;i++)
	{
		for(j=0;j<=1;j++)
			{
			scanf("%d",&a[i][j]);
			}
	}
	printf(" Elements of the second matrix : \n");
	for(i=0;i<=1;i++)
	{
		for(j=0;j<=1;j++)
		{
		scanf("%d",&b[i][j] );
		}
	}
	for(i=0;i<=1;i++)
	{
		for(j=0;j<=1;j++)
		{
		s[i][j]=a[i][j]+b[i][j];
		}
	}
	printf(" The sum of two matrix is : \n");
	for(i=0;i<=1;i++)
	{
		for(i=0;j<=1;j++)
		{
		printf("%d",s[i][j]);
		}
		printf("\n");
	}
	getch();
}
